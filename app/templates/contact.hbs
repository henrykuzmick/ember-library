<div class="jumbotron text-center">
  <h1>Contact us</h1>

  <br/><br/>

  <p>Don't miss our launch date, request an invitation now.</p>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <div class="form-group">
        <label for="emailAddress">Email:</label>
        {{input type="email" value=model.email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      </div>
      <div class="form-group">
        <label for="message">Message:</label>
        {{textarea value=model.message class="form-control" placeholder="Your msg" rows="7"}}
      </div>
      <div class="form-group">
        <button {{action 'sendMessage'}} disabled={{isDisabled}} class="btn btn-primary btn-lg btn-block">Send message</button>
      </div>
    </div>
  </div>

  {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}

  <br/><br/>
</div>
